<header class="min-h-16 py-4 sticky top-0 bg-gray-50/80 dark:bg-gray-800/80 backdrop-blur-sm">
  <div class="container mx-auto px-4 flex items-baseline justify-between">
    <%= link_to root_path, class: "font-bold text-2xl" do %>
      <h1>Tickevents</h1>
    <% end %>
    <% if user_signed_in? %>
      <div class="flex gap-5 items-center">
        <%= link_to edit_user_registration_path(current_user), class: "flex gap-2 items-center" do %>
          <p><%= current_user.username %></p>
          <% if current_user.avatar.attached? %>
            <picture class="size-10 rounded-full shadow-sm border border-gray-200 overflow-hidden"><img src="<%= url_for(current_user.avatar) %>" alt="Avatar" class="w-10"></picture>
          <% else %>
            <span>No avatar</span>
          <% end %>
        <% end %>
        <%= button_to destroy_user_session_path, method: :delete, class: "py-3 px-3 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-700 dark:text-white dark:hover:bg-neutral-700 dark:focus:bg-neutral-700" do %>
          <span class="sr-only">Cerrar sesiÃ³n</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4" viewBox="0 0 24 24"><path fill="currentColor" d="M4 5.4A1.4 1.4 0 0 1 5.4 4h6.2A1.4 1.4 0 0 1 13 5.4V8a1 1 0 1 0 2 0V5.4A3.4 3.4 0 0 0 11.6 2H5.4A3.4 3.4 0 0 0 2 5.4v13.2A3.4 3.4 0 0 0 5.4 22h6.2a3.4 3.4 0 0 0 3.4-3.4V16a1 1 0 1 0-2 0v2.6a1.4 1.4 0 0 1-1.4 1.4H5.4A1.4 1.4 0 0 1 4 18.6z" /><path fill="currentColor" d="M17.293 8.293a1 1 0 0 1 1.414 0l3 3a1 1 0 0 1 0 1.414l-3 3a1 1 0 0 1-1.414-1.414L18.586 13H7a1 1 0 1 1 0-2h11.586l-1.293-1.293a1 1 0 0 1 0-1.414" /></svg>
        <% end %>
      </div>
    <% else %>
      <%= link_to "Ingresar", new_user_session_path %>
    <% end %>
  </div>
</header>
